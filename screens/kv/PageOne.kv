<PageOne>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 150
            spacing: 10

            Widget:
                size_hint_x: None
                width: (self.parent.width - 800) / 2

            TextInput:
                id: task_input
                hint_text: 'Enter task'
                size_hint: None, None
                height: 150
                width: 500
                padding: [10, 10, 10, 10]
                background_color: [1, 1, 1, 1]
                foreground_color: [0, 0, 0, 1]

            Button:
                text: 'Add Task'
                size_hint: None, None
                height: 150
                width: 300
                on_release: root.add_task()
                background_normal: ''
                background_color: [0.1, 0.5, 0.8, 1]
                color: [1, 1, 1, 1]
                font_size: 16

            Widget:
                size_hint_x: None
                width: (self.parent.width - 800) / 2

        ScrollView:
            size_hint: 1, 1
            do_scroll_y: True
            do_scroll_x: False

            BoxLayout:
                id: task_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: [10, 10, 10, 10]
