<WelcomeScreen>:
  BoxLayout:
    orientation: 'vertical'
    padding: [50, 50, 50, 50]
    spacing: 20
    size_hint: None, None
    width: 700
    height: 500
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    BoxLayout:
      orientation: 'vertical'
      size_hint: None, None
      width: 300
      height: 300
      spacing: 100
      pos_hint: {'center_x': 0.5, 'center_y': 0.5}

      Label:
        id: welcome_label
        text: "Welcome!"
        size_hint: None, None
        height: 50
        pos_hint: {'center_x': 0.5}
        font_size: 100

      BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        width: 750
        height: 500
        spacing: 20
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
          text: "Hannes"
          size_hint: None, None
          width: 250
          height: 250
          background_color: 1, 0.4, 0.7, 1
          on_press: root.show_hannes_message()
        Button:
          text: "Leo"
          size_hint: None, None
          width: 250
          height: 250
          background_color: 0.4, 0.6, 1, 1
          on_press: root.show_leo_message()
        Button:
          text: "page one"
          size_hint: None, None
          width: 250
          height: 250
          background_color: 0.4, 0.6, 1, 1
          on_press: root.go_to_page()
